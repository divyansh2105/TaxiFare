<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_combined"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#212121"
    app:ignore="NamespaceTypo">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:layout_marginLeft="-30dp"
        android:scaleType="fitXY"
        android:src="@drawable/taxi_iage1_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"

        android:background="#c3f9d508"
        app:layout_columnWeight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_rowWeight="1"
        uber:cardBackgroundColor="#c3f9d508"
        uber:cardCornerRadius="8dp"
        uber:cardElevation="8dp">

        <com.uber.sdk.android.rides.RideRequestButton
            android:id="@+id/uber_button"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="card1"
            app:layout_constraintTop_toTopOf="card1"
            uber:ub__style="black" />
    </android.support.v7.widget.CardView>


</RelativeLayout>